<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    tools:context="com.example.admin.report_cc.Main2Activity">
    <EditText
        android:id="@+id/txtfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="42dp"
        tools:text="FirstName" />

    <EditText
        android:id="@+id/txtlname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtfname"
        android:ems="10"
        android:hint="LastName"
        android:inputType="textPersonName"
        android:text="Lastname"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtlname"
        android:ems="10"

        android:hint="Password"
        android:inputType="textPersonName"
        android:text="Password"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPassword"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:text="Email"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="275dp" />

    <EditText
        android:id="@+id/txtphone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName"
        android:text="Phone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="332dp"
        android:layout_below="@+id/txtemail"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtphone"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8C6354"
        android:text="Registration"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnReg"
        android:layout_alignBottom="@+id/btnReg"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btnReg"
        android:backgroundTint="#8C6354"
        android:text="Login" />
</RelativeLayout>



